URL=${URL:-${1}}

BROWSER="com.google.Chrome"
DESKTOP_FILE="${HOME}/.local/share/flatpak/exports/share/applications/${BROWSER}.desktop"

if [ ! -e "${DESKTOP_FILE}" ]
then
	zenity --info --text="Please switch to desktop mode and install Google Chrome from the discovery software center."
	exit 1
fi

unset LD_PRELOAD

/usr/bin/flatpak run \
	--arch=x86_64 \
	--branch=stable \
	--file-forwarding \
	"${BROWSER}" \
	@@u \
	@@ \
	--window-size="1024,640" \
	--force-device-scale-factor="1.25" \
	--device-scale-factor="1.25" \
	--kiosk \
	"${URL}"
